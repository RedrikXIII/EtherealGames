@inject IStringLocalizer<HeaderSearch> localizer

<div class="header-search">
    <div class="inner-element search-bar">
        <div class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="svg css-uwwqev element" viewBox="0 0 21 20" preserveAspectRatio="xMidYMid meet">
                <g transform="scale(1 -1) rotate(-45 -11.93502884 -2)" stroke="currentColor" stroke-width="1.65" fill="none" fill-rule="evenodd">
                    <circle color="#f5f5f599" cx="7.70710678" cy="7.70710678" r="7"></circle>
                    <path color="#e5e5e599" d="M15.2071068 8.62132034h5.6923881" stroke-linecap="square"></path>
                </g>
            </svg>
        </div>
        <input placeholder="@localizer["Search"]" class="element" />
    </div>
    <div class="inner-element topics">
        <div class="header-search-btn element">
            <p>@localizer["Discover"]</p>
        </div>
        <div class="header-search-btn element">
            <p>@localizer["Browse"]</p>
        </div>
        <div class="header-search-btn element">
            <p>@localizer["News"]</p>
        </div>
    </div>
</div>

@code {
    [CascadingParameter]
    public CultureInfo CurrentCulture { get; set; }

    protected override void OnParametersSet()
    {
        CultureInfo.CurrentCulture = CurrentCulture;
        CultureInfo.CurrentUICulture = CurrentCulture;
    }
}
